<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="header">
                <p id="logo">Public Administration CMS</p>
                <div id="nav">
                    <a href="{{ path('stm_cms_homepage') }}">Home</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        | <a href="{{ path('cms_user') }}">Users</a> | 
                        <a href="{{ path('cms_category') }}">Categories</a> |
                        <a href="{{ path('cms_page') }}">Pages</a> | 
                    {% elseif is_granted('ROLE_USER') %}
                        | <a href="{{ path('cms_page') }}">Pages</a> | 
                    {% endif %}
                    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('logout') }}">Logout</a>
                    {% endif %}
                </div>
            </div>
            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
